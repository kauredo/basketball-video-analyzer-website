---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/ui/Button.astro';
---

<BaseLayout title="Page Not Found" currentPage="">
  <!-- 404 Error Section -->
  <section class="py-20 bg-gradient-to-br from-neutral-50 to-neutral-100 min-h-screen flex items-center">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Basketball Icon -->
      <div class="w-24 h-24 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-8">
        <svg class="w-12 h-12 text-primary-600" viewBox="0 0 24 24" fill="none">
          <path d="M3.33946 16.9997C6.10089 21.7826 12.2168 23.4214 16.9997 20.66C18.9493 19.5344 20.3765 17.8514 21.1962 15.9286C22.3875 13.1341 22.2958 9.83304 20.66 6.99972C19.0242 4.1664 16.2112 2.43642 13.1955 2.07088C11.1204 1.81935 8.94932 2.21386 6.99972 3.33946C2.21679 6.10089 0.578039 12.2168 3.33946 16.9997Z" stroke="currentColor" stroke-width="1.5"/>
          <path d="M16.9498 20.5732C16.9498 20.5732 16.0108 13.982 14.0005 10.5C11.9901 7.01798 7.05029 3.42676 7.05029 3.42676" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          <path d="M21.8638 12.5803C16.4528 11.3933 9.05903 16.348 7.57739 20.8177" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          <path d="M16.4141 3.20884C14.9262 7.6299 7.67443 12.5122 2.28877 11.4515" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </div>

      <!-- Error Message -->
      <h1 class="text-6xl sm:text-7xl font-bold text-neutral-900 mb-4">404</h1>
      <h2 class="text-3xl sm:text-4xl font-bold text-neutral-900 mb-6">
        Looks like this play didn't work out
      </h2>
      <p class="text-xl text-neutral-600 mb-8 max-w-2xl mx-auto">
        The page you're looking for seems to have gone out of bounds.
        Don't worry, even the best coaches need to adjust their game plan sometimes.
      </p>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <Button href="/" size="lg" class="bg-primary-600 text-white hover:bg-primary-700">
          Back to Home Court
        </Button>
        <Button href="/features" variant="secondary" size="lg">
          Explore Features
        </Button>
      </div>

      <!-- Helpful Links -->
      <div class="bg-white rounded-lg p-6 shadow-sm max-w-2xl mx-auto">
        <h3 class="text-lg font-semibold text-neutral-900 mb-4">Looking for something specific?</h3>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-sm">
          <a href="/download" class="text-primary-600 hover:text-primary-700 font-medium">
            Download App
          </a>
          <a href="/support" class="text-primary-600 hover:text-primary-700 font-medium">
            Get Support
          </a>
          <a href="/pricing" class="text-primary-600 hover:text-primary-700 font-medium">
            Support Project
          </a>
        </div>
      </div>

      <!-- Search Suggestion -->
      <div class="mt-8 text-sm text-neutral-500">
        <p>If you think this is a mistake, please
          <a href="https://github.com/kauredo/basketball-video-analyzer/issues"
             target="_blank"
             rel="noopener noreferrer"
             class="text-primary-600 hover:text-primary-700 underline">
            report it on GitHub
          </a>
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
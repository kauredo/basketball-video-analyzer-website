---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/ui/Button.astro';
import Card from '@/components/ui/Card.astro';
import GitHubStar from '@/components/ui/GitHubStar.astro';
import { DownloadButton } from '@/components/features/DownloadButton';
import { FullScreenBasketball3D } from '@/components/3d/FullScreenBasketball3D';
import { getCachedLatestRelease } from '@/utils/cache';
import { fallbackReleaseData } from '@/utils/fallback';

// Fetch release data at build time
const release = await getCachedLatestRelease() ?? fallbackReleaseData;
---

<BaseLayout title="Professional Basketball Video Analysis Tool">
  <!-- Full Screen 3D Basketball Scene -->
  <FullScreenBasketball3D
    client:load
    enableOnMobile={true}
  />

  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-start px-4 sm:px-6 lg:px-8 relative">
    <!-- Hero Content -->
    <div class="relative z-10 max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
        <!-- Text Content - Left Side -->
        <div class="text-left">
      <div class="mb-8">
        <!-- Main Heading -->
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black text-neutral-900 mb-6 leading-tight">
          Free <span class="text-gradient-primary">Basketball</span><br>
          Video Analysis Tool
        </h1>

        <!-- Beta Badge -->
        <div class="inline-flex items-center gap-2 bg-primary-100 text-primary-700 px-4 py-2 rounded-full text-sm font-medium mb-6">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Beta Version 1.0.0 - Free & Open Source
        </div>

        <!-- Subtitle -->
        <p class="text-xl sm:text-2xl text-neutral-700 mb-8 max-w-3xl mx-auto leading-relaxed">
          Cut, categorize, and organize basketball video clips with precision.
          Built by coaches, for coaches - completely free to use.
        </p>

        <!-- Feature Highlights -->
        <div class="flex flex-wrap gap-4 mb-12 text-sm font-medium">
          <span class="inline-flex items-center gap-2 bg-white/80 rounded-full px-4 py-2 text-neutral-700">
            <svg class="w-4 h-4 text-primary-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Hierarchical Categories
          </span>
          <span class="inline-flex items-center gap-2 bg-white/80 rounded-full px-4 py-2 text-neutral-700">
            <svg class="w-4 h-4 text-primary-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Reusable Presets
          </span>
          <span class="inline-flex items-center gap-2 bg-white/80 rounded-full px-4 py-2 text-neutral-700">
            <svg class="w-4 h-4 text-primary-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Project-Based
          </span>
          <span class="inline-flex items-center gap-2 bg-white/80 rounded-full px-4 py-2 text-neutral-700">
            <svg class="w-4 h-4 text-primary-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Cross-Platform
          </span>
        </div>

        <!-- Download Button -->
        <div class="flex flex-col sm:flex-row gap-4 items-center">
          <DownloadButton client:load className="shadow-basketball" />
          <Button variant="secondary" size="lg" href="#features">
            See Features
            <svg class="w-5 h-5 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
          </Button>
        </div>

        <!-- Version & Download Stats -->
        <div class="mt-8 text-sm text-neutral-600 flex justify-center sm:justify-start">
          <span class="inline-flex items-center gap-2 bg-white/80 rounded-full px-4 py-2 text-neutral-700">
            Latest version: <span class="font-semibold text-primary-600">{release.version}</span>
            •
            <span class="font-semibold">{release.downloadCount.toLocaleString()}</span> downloads
          </span>
        </div>
      </div>
    </div>
  </section>

  <!-- App Screenshots Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-neutral-900 mb-4">
          See the App in Action
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto">
          Professional video analysis made simple with an intuitive interface designed for coaches.
        </p>
      </div>

      <!-- Screenshot Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
        <!-- Video Cutting Interface Screenshot -->
        <div class="relative rounded-lg shadow-lg overflow-hidden aspect-video bg-cover bg-center" style="background-image: url('/images/screenshots/video-cutting-interface.png');">
          <!-- Overlay for readability -->
          <div class="absolute inset-0 bg-black/40"></div>
          <!-- Content overlay -->
          <div class="relative z-10 h-full flex items-center justify-center">
            <div class="text-center text-white">
              <div class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-white mb-2 drop-shadow-lg">Precision Video Cutting</h3>
              <p class="text-sm text-white/90 drop-shadow-lg">Mark in/out points with I and O keys, precise frame control</p>
            </div>
          </div>
        </div>

        <!-- Project Organization Screenshot -->
        <div class="relative rounded-lg shadow-lg overflow-hidden aspect-video bg-cover bg-center" style="background-image: url('/images/screenshots/project-organization.png');">
          <!-- Overlay for readability -->
          <div class="absolute inset-0 bg-black/40"></div>
          <!-- Content overlay -->
          <div class="relative z-10 h-full flex items-center justify-center">
            <div class="text-center text-white">
              <div class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14-7H5m14 14H5"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-white mb-2 drop-shadow-lg">Smart Organization</h3>
              <p class="text-sm text-white/90 drop-shadow-lg">Hierarchical categories and reusable presets</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature Callouts -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-neutral-900 mb-2">Time Search</h3>
          <p class="text-neutral-600">Jump to specific moments using HH:MM:SS format</p>
        </div>

        <div class="text-center">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-neutral-900 mb-2">Smart Tagging</h3>
          <p class="text-neutral-600">Create reusable category presets for consistent organization</p>
        </div>

        <div class="text-center">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-neutral-900 mb-2">Batch Export</h3>
          <p class="text-neutral-600">Export organized clip libraries with folder structure</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-neutral-900 mb-4">
          Everything You Need for
          <span class="text-gradient-primary">Video Analysis</span>
        </h2>
        <p class="text-xl text-neutral-600 max-w-2xl mx-auto">
          Professional-grade tools designed specifically for basketball coaches and analysts
        </p>
      </div>

      <!-- Features Grid -->
      <div class="feature-grid">
        <!-- Time Search Feature -->
        <Card variant="hover" class="text-center">
          <div class="w-12 h-12 bg-gradient-to-br from-primary-400 to-primary-600 rounded-lg flex items-center justify-center mx-auto mb-4 shadow-md">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 mb-2">Precision Time Search</h3>
          <p class="text-neutral-600 mb-4">
            Jump to specific moments instantly using HH:MM:SS format. Find exactly what you're looking for in seconds.
          </p>
          <span class="inline-block bg-primary-50 text-primary-700 text-sm font-medium px-3 py-1 rounded-full">
            1:23:45 → Instant Navigation
          </span>
        </Card>

        <!-- Multiple Presets -->
        <Card variant="hover" class="text-center">
          <div class="w-12 h-12 bg-gradient-to-br from-primary-400 to-primary-600 rounded-lg flex items-center justify-center mx-auto mb-4 shadow-md">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 mb-2">Smart Preset System</h3>
          <p class="text-neutral-600 mb-4">
            Create multiple category templates for different scenarios. Save time with pre-configured setups for offense, defense, and special situations.
          </p>
          <span class="inline-block bg-primary-50 text-primary-700 text-sm font-medium px-3 py-1 rounded-full">
            Offense • Defense • Special Teams
          </span>
        </Card>

        <!-- Project Organization -->
        <Card variant="hover" class="text-center">
          <div class="w-12 h-12 bg-gradient-to-br from-primary-400 to-primary-600 rounded-lg flex items-center justify-center mx-auto mb-4 shadow-md">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 mb-2">Project-Based Organization</h3>
          <p class="text-neutral-600 mb-4">
            Separate projects for different games, opponents, or analysis types. Keep your work organized and easily accessible.
          </p>
          <span class="inline-block bg-primary-50 text-primary-700 text-sm font-medium px-3 py-1 rounded-full">
            Game 1 • Playoffs • Practice
          </span>
        </Card>

        <!-- Video Cutting -->
        <Card variant="hover" class="text-center">
          <div class="w-12 h-12 bg-gradient-to-br from-primary-400 to-primary-600 rounded-lg flex items-center justify-center mx-auto mb-4 shadow-md">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 mb-2">Advanced Video Cutting</h3>
          <p class="text-neutral-600 mb-4">
            Mark in/out points with keyboard shortcuts. Frame-by-frame navigation ensures you capture exactly what you need.
          </p>
          <span class="inline-block bg-primary-50 text-primary-700 text-sm font-medium px-3 py-1 rounded-full">
            I • O • Space • ←→
          </span>
        </Card>

        <!-- Export System -->
        <Card variant="hover" class="text-center">
          <div class="w-12 h-12 bg-gradient-to-br from-primary-400 to-primary-600 rounded-lg flex items-center justify-center mx-auto mb-4 shadow-md">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 mb-2">Organized Export System</h3>
          <p class="text-neutral-600 mb-4">
            Export clip libraries by category with automatic folder structure. Perfect for sharing with assistants and players.
          </p>
          <span class="inline-block bg-primary-50 text-primary-700 text-sm font-medium px-3 py-1 rounded-full">
            MP4 • Organized Folders
          </span>
        </Card>

        <!-- Cross-Platform -->
        <Card variant="hover" class="text-center">
          <div class="w-12 h-12 bg-gradient-to-br from-primary-400 to-primary-600 rounded-lg flex items-center justify-center mx-auto mb-4 shadow-md">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 mb-2">Cross-Platform Support</h3>
          <p class="text-neutral-600 mb-4">
            Works seamlessly on Windows, macOS, and Linux. Use the same workflow regardless of your preferred platform.
          </p>
          <div class="flex justify-center gap-2">
            <span class="inline-block bg-primary-50 text-primary-700 text-sm font-medium px-2 py-1 rounded">Windows</span>
            <span class="inline-block bg-primary-50 text-primary-700 text-sm font-medium px-2 py-1 rounded">macOS</span>
            <span class="inline-block bg-primary-50 text-primary-700 text-sm font-medium px-2 py-1 rounded">Linux</span>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- GitHub Star Section -->
  <section class="py-20 bg-neutral-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <GitHubStar />
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-br from-primary-500 to-primary-700 text-white">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl sm:text-4xl font-bold mb-4">
        Ready to Elevate Your Analysis?
      </h2>
      <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
        Join other basketball coaches who use Basketball Video Analyzer to gain competitive advantages and develop winning strategies.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <DownloadButton client:load className="bg-white text-primary-600 hover:bg-neutral-50" />
        <Button variant="ghost" size="lg" href="/features" class="text-white border-white hover:bg-white/10">
          Learn More
        </Button>
      </div>

      <!-- Trust Indicators -->
      <div class="mt-12 pt-8 border-t border-primary-400">
        <p class="text-primary-100 mb-4">Trusted by coaches at every level</p>
        <div class="flex flex-wrap justify-center gap-8 text-sm text-primary-200">
          <span>High School Teams</span>
          <span>College Programs</span>
          <span>Professional Scouts</span>
          <span>Youth Organizations</span>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Additional component-specific styles */
  .hero-gradient {
    background: linear-gradient(135deg,
      theme('colors.primary.50') 0%,
      theme('colors.primary.100') 25%,
      theme('colors.court.wood') 50%,
      theme('colors.primary.100') 75%,
      theme('colors.primary.50') 100%
    );
  }

  @media (max-width: 640px) {
    .feature-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
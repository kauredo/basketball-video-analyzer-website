---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { DownloadButton } from '@/components/features/DownloadButton';
import { FullScreenBasketball3D } from '@/components/3d/FullScreenBasketball3D';
import { getCachedLatestRelease } from '@/utils/cache';
import { fallbackReleaseData } from '@/utils/fallback';

const release = await getCachedLatestRelease() ?? fallbackReleaseData;
---

<BaseLayout title="Free Basketball Video Analysis Tool">

  <!-- ============================== -->
  <!-- HERO: Full viewport, 3D ball   -->
  <!-- ============================== -->
  <section aria-label="Hero" class="relative min-h-screen flex items-center">
    <!-- 3D Basketball Background -->
    <FullScreenBasketball3D
      client:load
      enableOnMobile={true}
    />

    <!-- Hero Content — left-aligned -->
    <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
      <div class="max-w-2xl">
        <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl font-bold text-warm-900 leading-[1.1] mb-6">
          Free basketball video analysis tool, built by a coach.
        </h1>
        <p class="text-lg sm:text-xl text-warm-600 mb-8 max-w-lg">
          I got tired of scrubbing through game tapes in VLC, so I built this. Mark plays, organize clips, export folders. That's it.
        </p>

        <DownloadButton client:load />
        <p class="text-sm text-warm-600 mt-4">
          Windows, macOS, and Linux &middot; Free &amp; open source
        </p>
      </div>
    </div>
  </section>


  <!-- ============================== -->
  <!-- THE APP: Product showcase      -->
  <!-- ============================== -->
  <section aria-label="Product showcase" class="py-16 sm:py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="sr-only">The app</h2>
      <!-- Screenshot — clean, no overlay -->
      <div class="rounded-xl overflow-hidden shadow-2xl">
        <img
          src="/images/screenshots/video-cutting-interface.png"
          alt="Basketball Video Analyzer — video cutting interface showing the video player, timeline, and clip creator"
          class="w-full h-auto block"
          loading="lazy"
        />
      </div>

      <!-- 3 callouts — not cards, just text -->
      <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-10 md:gap-12">
        <div>
          <div class="flex items-center gap-2 mb-2">
            <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
            <h3 class="font-display font-semibold text-warm-900">Mark clips with keyboard shortcuts</h3>
          </div>
          <p class="text-warm-600 text-sm leading-relaxed">
            Press I for in-point, O for out-point, Space to play/pause. Frame-by-frame with arrow keys.
          </p>
        </div>

        <div>
          <div class="flex items-center gap-2 mb-2">
            <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
            </svg>
            <h3 class="font-display font-semibold text-warm-900">Organize with hierarchical categories</h3>
          </div>
          <p class="text-warm-600 text-sm leading-relaxed">
            Create category trees for offense, defense, transitions — whatever your coaching system needs.
          </p>
        </div>

        <div>
          <div class="flex items-center gap-2 mb-2">
            <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <h3 class="font-display font-semibold text-warm-900">Export organized clip folders</h3>
          </div>
          <p class="text-warm-600 text-sm leading-relaxed">
            One click exports all your clips into category-based folders. Ready to share with staff or players.
          </p>
        </div>
      </div>
    </div>
  </section>


  <!-- ============================== -->
  <!-- HOW IT WORKS: 3 steps          -->
  <!-- ============================== -->
  <section aria-label="How it works" class="py-20 sm:py-28 bg-warm-100/50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="font-display text-3xl sm:text-4xl font-bold text-warm-900 mb-16">
        How it works
      </h2>

      <div class="space-y-16 sm:space-y-24">
        <!-- Step 1 -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 items-center">
          <div>
            <div class="flex items-baseline gap-4 mb-4">
              <span class="font-display text-5xl font-bold text-warm-200">1</span>
              <h3 class="font-display text-xl font-semibold text-warm-900">Load your game tape</h3>
            </div>
            <p class="text-warm-600 leading-relaxed max-w-md">
              Drag in any video file. Create a project for each game, opponent, or practice session so everything stays organized from the start.
            </p>
          </div>
          <div class="rounded-lg overflow-hidden shadow-lg">
            <img
              src="/images/screenshots/project-organization.png"
              alt="Project organization view showing multiple games organized by opponent"
              class="w-full h-auto block"
              loading="lazy"
            />
          </div>
        </div>

        <!-- Step 2 -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 items-center">
          <div class="lg:order-2">
            <div class="flex items-baseline gap-4 mb-4">
              <span class="font-display text-5xl font-bold text-warm-200">2</span>
              <h3 class="font-display text-xl font-semibold text-warm-900">Mark the plays that matter</h3>
            </div>
            <p class="text-warm-600 leading-relaxed max-w-md">
              Use keyboard shortcuts to set in/out points as you watch. Tag each clip with categories — pick-and-roll, fast break, zone defense, whatever fits your system.
            </p>
          </div>
          <div class="lg:order-1 rounded-lg overflow-hidden shadow-lg">
            <img
              src="/images/screenshots/category-management.png"
              alt="Category management showing hierarchical organization of play types"
              class="w-full h-auto block"
              loading="lazy"
            />
          </div>
        </div>

        <!-- Step 3 -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 items-center">
          <div>
            <div class="flex items-baseline gap-4 mb-4">
              <span class="font-display text-5xl font-bold text-warm-200">3</span>
              <h3 class="font-display text-xl font-semibold text-warm-900">Export and share with your team</h3>
            </div>
            <p class="text-warm-600 leading-relaxed max-w-md">
              Export your clip library as organized folders — one folder per category, clips named clearly. Drop them in Google Drive, hand them to an assistant, or play them in the film room.
            </p>
          </div>
          <div class="rounded-lg overflow-hidden shadow-lg">
            <img
              src="/images/screenshots/clip-library-browser.png"
              alt="Clip library showing all marked clips organized by category"
              class="w-full h-auto block"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- ============================== -->
  <!-- CTA: Open source + download    -->
  <!-- ============================== -->
  <section id="download" aria-label="Download" class="py-24 sm:py-32 bg-warm-100/30">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-2xl">
        <h2 class="font-display text-3xl sm:text-4xl font-bold text-warm-900 mb-6">
          Free forever. Open source.<br>
          Built because coaches deserve better tools.
        </h2>
        <p class="text-warm-600 mb-8 max-w-lg">
          No subscriptions, no feature gates, no data collection. Just a tool that does what it says. If you find a bug or want a feature, open an issue on GitHub.
        </p>

        <div class="flex flex-col sm:flex-row items-start justify-center gap-4 mb-8">
          <DownloadButton client:load />
          <a
            href="https://github.com/kauredo/basketball-video-analyzer"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-6 py-3 text-warm-700 font-medium
              border border-warm-300 rounded-lg
              hover:border-warm-400 hover:bg-warm-100 transition-all"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View on GitHub
          </a>
        </div>

        <p class="text-sm text-warm-600">
          Windows, macOS, and Linux &middot; {release.version}
        </p>
      </div>
    </div>
  </section>

</BaseLayout>

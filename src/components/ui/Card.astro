---
export interface Props {
  variant?: 'default' | 'hover' | 'hero';
  class?: string;
  padding?: boolean;
}

const {
  variant = 'default',
  class: className = '',
  padding = true,
  ...rest
} = Astro.props;

const baseClasses = 'card';
const variantClasses = {
  default: '',
  hover: 'card-hover',
  hero: 'card-hero'
};

const paddingClasses = padding ? 'p-6' : '';

const combinedClasses = [
  baseClasses,
  variantClasses[variant],
  paddingClasses,
  className
].filter(Boolean).join(' ');
---

<div class={combinedClasses} {...rest}>
  <slot />
</div>
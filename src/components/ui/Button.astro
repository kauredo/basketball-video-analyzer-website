---
export interface Props {
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  target?: string;
  download?: boolean;
  class?: string;
  id?: string;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  target,
  download,
  class: className = '',
  id,
  ...rest
} = Astro.props;

const baseClasses = 'btn';
const variantClasses = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  ghost: 'btn-ghost'
};
const sizeClasses = {
  sm: 'btn-sm',
  md: '',
  lg: 'btn-lg'
};

const combinedClasses = [
  baseClasses,
  variantClasses[variant],
  sizeClasses[size],
  className
].filter(Boolean).join(' ');

const Tag = href ? 'a' : 'button';
---

<Tag
  class={combinedClasses}
  href={href}
  target={target}
  download={download}
  id={id}
  {...rest}
>
  <slot />
</Tag>
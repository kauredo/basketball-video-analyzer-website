---
const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { href: "/features", label: "Features" },
    { href: "/download", label: "Download" },
    { href: "/pricing", label: "Donate" },
  ],
  support: [
    { href: "/support", label: "Get Help" },
    { href: "https://github.com/kauredo/basketball-video-analyzer/issues", label: "Report Issues" },
    { href: "https://github.com/kauredo/basketball-video-analyzer/discussions", label: "Discussions" },
  ],
  community: [
    { href: "https://github.com/kauredo/basketball-video-analyzer", label: "GitHub" },
    { href: "https://github.com/kauredo/basketball-video-analyzer#readme", label: "Documentation" },
    { href: "https://github.com/kauredo/basketball-video-analyzer/releases", label: "Releases" },
  ]
};
---

<footer class="bg-neutral-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Brand Section -->
      <div class="lg:col-span-1">
        <div class="flex items-center gap-2 mb-4">
          <div class="w-8 h-8 bg-gradient-to-br from-primary-500 to-primary-600 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="none">
              <path d="M3.33946 16.9997C6.10089 21.7826 12.2168 23.4214 16.9997 20.66C18.9493 19.5344 20.3765 17.8514 21.1962 15.9286C22.3875 13.1341 22.2958 9.83304 20.66 6.99972C19.0242 4.1664 16.2112 2.43642 13.1955 2.07088C11.1204 1.81935 8.94932 2.21386 6.99972 3.33946C2.21679 6.10089 0.578039 12.2168 3.33946 16.9997Z" stroke="currentColor" stroke-width="1.5"/>
              <path d="M16.9498 20.5732C16.9498 20.5732 16.0108 13.982 14.0005 10.5C11.9901 7.01798 7.05029 3.42676 7.05029 3.42676" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
              <path d="M21.8638 12.5803C16.4528 11.3933 9.05903 16.348 7.57739 20.8177" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
              <path d="M16.4141 3.20884C14.9262 7.6299 7.67443 12.5122 2.28877 11.4515" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
            </svg>
          </div>
          <span class="font-bold text-xl text-white">Basketball Analyzer</span>
        </div>
        <p class="text-neutral-400 text-sm mb-4">
          Free and open source basketball video analysis tool built by coaches, for coaches.
        </p>
        <div class="flex items-center gap-2 text-sm text-neutral-400">
          <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span>Free Forever</span>
        </div>
      </div>

      <!-- Product Links -->
      <div>
        <h3 class="font-semibold text-white mb-4">Product</h3>
        <ul class="space-y-3">
          {footerLinks.product.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-neutral-400 hover:text-white transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Support Links -->
      <div>
        <h3 class="font-semibold text-white mb-4">Support</h3>
        <ul class="space-y-3">
          {footerLinks.support.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-neutral-400 hover:text-white transition-colors text-sm"
                target={link.href.startsWith('http') ? '_blank' : undefined}
                rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Community Links -->
      <div>
        <h3 class="font-semibold text-white mb-4">Community</h3>
        <ul class="space-y-3">
          {footerLinks.community.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-neutral-400 hover:text-white transition-colors text-sm"
                target="_blank"
                rel="noopener noreferrer"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-neutral-800 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <!-- Copyright -->
        <div class="text-neutral-400 text-sm">
          © {currentYear} Basketball Video Analyzer. Made with ❤️ by <a href="https://github.com/kauredo" target="_blank" rel="noopener noreferrer" class="text-primary-400 hover:text-primary-300 transition-colors">kauredo</a>.
        </div>

        <!-- Social Links -->
        <div class="flex items-center gap-4">
          <a
            href="https://github.com/kauredo/basketball-video-analyzer"
            target="_blank"
            rel="noopener noreferrer"
            class="text-neutral-400 hover:text-white transition-colors"
            aria-label="GitHub Repository"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>

          <a
            href="https://github.com/kauredo/basketball-video-analyzer/stargazers"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1 text-neutral-400 hover:text-white transition-colors text-sm"
            aria-label="Star on GitHub"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            <span>Star</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>